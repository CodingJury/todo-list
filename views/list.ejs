<%- include("header"); -%>

  <body>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">

      <%listItems.forEach(function(element){%>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=element.id%>" onChange="this.form.submit()">
            <p><%=element.name%></p>
          </div>
          <input type="hidden" name="listName" value="<%=listTitle%>"></input>
        </form>
      <%})%>


      <form class="item" action="/" method="post">
        <input type="text" name="userInput" placeholder="Type what you want to do." autocomplete="off">
        <button type="submit" name="list" value=<%=listTitle%> >+</button>
      </form>

    </div>

  </body>

<%- include("footer"); -%>